<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/tbtextColor"
    android:layout_margin="6dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PassID"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name_zeroT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:fontFamily="@font/nunito_semibold"
            android:textStyle="bold"
            tools:text="P" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nomeTransV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danilo Trasport"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/destinoTransV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/nunito_extra_light"
                android:text="Destino: Morrumbene"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/localizacaoTransV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_extra_light"
                android:text="Localizacao:Cambine"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/horapartidTransV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_extra_light"
                android:text="Partida:12:30m"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/horaTransV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:30m"
                android:layout_gravity="end"
                android:textColor="#000000"
                android:layout_marginRight="15dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>